<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sj971.lab6_1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtData"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:background="#55dddddd"
            android:padding="10dp"
            android:gravity="top"
            android:hint="Enter some lines of data"
            android:textSize="18sp">
        </EditText>

        <Button
            android:id="@+id/writeButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="WRITE SD FILE"/>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CLEAR SCREEN"/>

        <Button
            android:id="@+id/readButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="READ SD FILE"/>

        <Button
            android:id="@+id/finishButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="FINISH APP"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>